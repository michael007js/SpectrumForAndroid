<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HorizontalEnergyActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".AiVoiceActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".SiriActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".SlipBallActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".HexagramViewActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".ColumnarActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".BesselActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".WaveActivity"
            android:screenOrientation="landscape"  />
        <activity android:name=".CircleRoundActivity"
            android:screenOrientation="landscape"  />
        <activity android:name=".SpeedometerActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".RotatingCircleActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".GridPointActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".ColorBubbleActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".AttachmentRingActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".DiffusionRingActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".WaveRingActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>